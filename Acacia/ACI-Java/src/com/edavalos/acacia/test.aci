class Thing {
    getCallback() {
        def localFunction() {
            println(this);
        }

        return localFunction;
    }
}

let callback = Thing().getCallback();
callback();

class Cake {
    taste(adjective) {
        println("The " + this.flavor + " cake is " + adjective + "!");
    }
}

let cake = Cake();
cake.flavor = "German chocolate";
cake.taste("delicious");